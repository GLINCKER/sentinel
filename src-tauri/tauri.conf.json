{
  "productName": "Sentinel",
  "version": "0.1.0",
  "identifier": "dev.sentinel.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "publisher": "GLINCKER",
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2025 GLINCKER",
    "externalBin": [],
    "longDescription": "Sentinel is a modern, secure process manager and system monitor designed for developers. Manage multiple processes, view real-time system metrics, and keep your development environment organized.",
    "shortDescription": "Process manager and system monitor for developers",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "app": {
    "windows": [
      {
        "title": "Sentinel",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: https://ipc.localhost; connect-src ipc: https://ipc.localhost; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data:",
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Main application permissions",
          "windows": ["main"],
          "permissions": [
            "pty:allow-spawn",
            "pty:allow-write",
            "pty:allow-read",
            "pty:allow-resize",
            "pty:allow-kill",
            "pty:allow-exitstatus",
            "shell:allow-open"
          ]
        }
      ]
    }
  }
}
